        <td><%= enologo_vino.vino.cepas %></td>
        <td><%= link_to 'Show', enologo_vino %></td>
        <td><%= link_to 'Edit', edit_enologo_vino_path(enologo_vino) %></td>
        <td><%= link_to 'Destroy', enologo_vino, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
